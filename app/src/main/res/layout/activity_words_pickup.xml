<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".WordsPickupActivity"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/send_window_back"
        android:padding="20dp">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/selectedTextView"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" android:textSize="36sp"
        />
    </ScrollView>
    <Button
            android:text="@string/send_words_button_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/send_to_server_button" android:textSize="18sp"
            android:layout_marginTop="20dp" android:padding="30dp"/>
</LinearLayout>
