<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".WordsPickupActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/selectedTextView"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" android:textSize="36sp"/>
        <Button
                android:text="@string/send_words_button_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/send_to_server_button" android:textSize="18sp"
                android:layout_marginTop="20dp" android:padding="30dp"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>