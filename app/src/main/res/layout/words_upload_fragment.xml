<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".ui.wordsupload.WordsUploadActivity"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/send_window_back"
        android:padding="20dp"
        android:layout_marginBottom="0dp">
    <ScrollView
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content">
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/selectedTextView1"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" android:textSize="26sp"
        />
    </ScrollView>
    <CheckBox
            android:id="@+id/show_translated_text_checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Translate"/>

    <ScrollView
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content">
        <TextView
                android:text="TranslatedTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/translatedTextView"
                android:textSize="16sp"
                android:textStyle="italic"/>
    </ScrollView>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="72dp" android:layout_marginTop="20dp"
            android:orientation="horizontal">

        <Button
                android:id="@+id/send_to_server_button"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="0.7"
                android:background="#1E88E5"
                android:textColor="#FFFFFFFF"
                android:text="@string/send_words_button_text"/>
        <LinearLayout
                android:layout_height="fill_parent"
                android:layout_width="20dp">
        </LinearLayout>
        <Button
                android:id="@+id/edit_button"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="0.3"
                android:background="#1E88E5"
                android:textColor="#FFFFFFFF"
                android:text="@string/edit_words_button_text"/>
    </LinearLayout></LinearLayout>
